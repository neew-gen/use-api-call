{
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "commit": true,
    "commitMessage": "release: v${version}",
    "tag": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "npm test"
    ],
    "before:release": [
      "npm run build"
    ]
  }
} 